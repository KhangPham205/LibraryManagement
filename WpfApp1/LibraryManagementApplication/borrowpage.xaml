<Page x:Class="LibraryManagementApplication.borrowpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagementApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="muonpage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
            Background="#e6f3ff">
            <TextBlock Text="Quản lý thông tin đơn mượn " 
               FontSize="50" 
               FontWeight="Bold" 
               FontFamily="roboto"
               Foreground="#07209e"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               />
        </Grid>
        <Grid Grid.Row="1"
              Background="#cfcfcf">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Mã độc giả:"
                     Foreground="#07209e"
                     FontSize="18"
                     Grid.Column="0"
                     Grid.Row="1"
                     Margin="5"
                     HorizontalAlignment="Right"/>
                <TextBox x:Name="tentb"
                     Grid.Column="1"
                     Grid.Row="1"
                     Grid.ColumnSpan="3"
                     FontSize="18"
                     Margin="5"/>
                <Button  x:Name="adddon"
                      Content="Tạo"
                      Background="#FF9AFFAB"
                      Width="75"
                      Margin="5"
                      FontSize="18"
                      Grid.Column="2"
                      Grid.Row="2"
                      Style="{DynamicResource button1}"/>
                <Button  x:Name="deletedon"
                        Content="Xóa"
                        Width="75"
                        Margin="5"
                        FontSize="18"
                        Grid.Column="3"
                        Grid.Row="2"
                        Background="#FFFF9A9A"
                        Style="{DynamicResource button1}"/>
            </Grid>
            <Grid x:Name="themsach"
                  Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Tên sách:"
                    Foreground="#07209e"
                    FontSize="18"
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="5"
                    HorizontalAlignment="Right"/>
                <TextBox x:Name="tensachtb"
                    Grid.Column="1"
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    FontSize="18"
                    Margin="5"/>
                <TextBlock Text="ISBN: "
                    Foreground="#07209e"
                    FontSize="18"
                    Grid.Column="0"
                    Grid.Row="2"
                    Margin="5"
                    HorizontalAlignment="Right"/>
                <TextBox x:Name="isbn"
                    Grid.Column="1"
                    Grid.Row="2"
                    FontSize="18"
                    Margin="5"/>
                <Button  x:Name="addsach"
                      Content="Thêm"
                      Background="#FF9AFFAB"
                      Width="75"
                      Margin="5"
                      FontSize="18"
                      Grid.Column="2"
                      Grid.Row="2"
                      Style="{DynamicResource button1}"/>
                <Button  x:Name="deletesach"
                    Content="Xóa"
                    Width="75"
                    Margin="5"
                    FontSize="18"
                    Grid.Column="3"
                    Grid.Row="2"
                    Background="#FFFF9A9A"
                    Style="{DynamicResource button1}"/>
            </Grid>
            <DataGrid x:Name="sach" 
                      Grid.Column="1" 
                      Grid.RowSpan="2"
                      FontSize="18"
                    Margin="5" 
                    AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Sách" IsReadOnly="True" Binding="{Binding TenSach}"/>
                    <DataGridTextColumn Header="IBSN" IsReadOnly="True" Binding="{Binding IBSN}"/>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid x:Name="muon"
                Grid.Row="2" 
                Grid.ColumnSpan="2"
                FontSize="18"
                Margin="5" 
                AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã đơn mượn" IsReadOnly="True" Binding="{Binding MaMuon}"/>
                    <DataGridTextColumn Header="Tên độc giả" IsReadOnly="True" Binding="{Binding TenDG}"/>
                    <DataGridTextColumn Header="Tên nhân viên" IsReadOnly="True" Binding="{Binding TenNV}"/>
                    <DataGridTextColumn Header="Ngày mượn" IsReadOnly="True" Binding="{Binding NgayMuon}"/>
                    <DataGridTextColumn Header="Ngày trả dự kiến" IsReadOnly="True" Binding="{Binding NgayTraDK}"/>
                    <DataGridTextColumn Header="Ngày trả thực tế" IsReadOnly="True" Binding="{Binding NgayTraTT}"/>
                    <DataGridTextColumn Header="Ngày trả phí phạt" IsReadOnly="True" Binding="{Binding PhiPhat}"/>
                    <DataGridCheckBoxColumn Header="Trả" Binding="{Binding isTra}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
