<Page x:Class="LibraryManagementApplication.employeepage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagementApplication.ViewModel.ClassViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="employeepage">
    <Page.DataContext>
        <local:TaiKhoanViewModel/>
    </Page.DataContext>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
             Background="#e6f3ff">
            <TextBlock Text="Quản lý nhân viên " 
             FontSize="50" 
             FontWeight="Bold" 
             FontFamily="roboto"
             Foreground="#07209e"
             VerticalAlignment="Center"
             HorizontalAlignment="Right"
             />
        </Grid>
        <Grid 
            Background="#e6f3ff"
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Margin="40,40,40,10"
                    BorderBrush="#07209e"
                    BorderThickness="2"
                    CornerRadius="20">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Tên nhân viên:"
                     Style="{StaticResource textblock:style1}"
                     Grid.Column="0"
                     Grid.Row="1"
                     Margin="5"
                     HorizontalAlignment="Right"/>
                    <TextBox x:Name="tentb"
                     Grid.Column="1"
                     Grid.Row="1"
                     Margin="5"
                     Style="{StaticResource textbox:style1}"
                     Text="{Binding UserName}"/>
                    <TextBlock Text="Mật khẩu:"
                     Style="{StaticResource textblock:style1}"
                     Grid.Column="0"
                     Grid.Row="2"
                     Margin="5"
                     HorizontalAlignment="Right"/>
                    <TextBox x:Name="mktb"
                     Grid.Column="1"
                     Grid.Row="2"
                      Style="{StaticResource textbox:style1}"
                     Margin="5"
                     Text="{Binding Password}"/>
                    <TextBlock Text="Email: "
                     Style="{StaticResource textblock:style1}"
                     Grid.Column="0"
                     Grid.Row="3"
                     Margin="5"
                     HorizontalAlignment="Right"/>
                    <TextBox x:Name="emailtb"
                     Grid.Column="1"
                     Grid.Row="3"
                     Style="{StaticResource textbox:style1}"
                     Margin="5"
                     Text="{Binding Email}"/>
                    <TextBlock Text="CCCD: "
                     Style="{StaticResource textblock:style1}"
                     Grid.Column="2"
                     Grid.Row="1"
                     Margin="5"
                     HorizontalAlignment="Right"/>
                    <TextBox x:Name="cccdtb"
                     Grid.Column="3"
                     Grid.Row="1"
                     Style="{StaticResource textbox:style1}"
                     Margin="5"
                     Text="{Binding CCCD}"/>
                    <TextBlock Text="SDT: "
                     Style="{StaticResource textblock:style1}"
                     Grid.Column="2"
                     Grid.Row="2"
                     Margin="5"
                     HorizontalAlignment="Right"/>
                    <TextBox x:Name="sdttb"
                     Grid.Column="3"
                     Grid.Row="2"
                     Style="{StaticResource textbox:style1}"
                     Margin="5"
                     Text="{Binding SDT}"/>
                    <Grid Grid.Row="4"
                      Grid.Column="0"
                      Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button  x:Name="adddg"
                         Content="Thêm"
                         Margin="5"
                         Style="{DynamicResource button:add}"
                         Command="{Binding AddCommand}"/>
                        <Button  x:Name="finddg"
                         Content="Tìm"
                         Grid.Column="1"
                         Margin="5"
                         Style="{DynamicResource button:find}"
                         Command="{Binding SearchCommand}"/>
                        <Button  x:Name="editdg"
                         Content="Sửa"
                         Grid.Column="2"
                         Margin="5"
                         Style="{DynamicResource button:edit}"
                         Command="{Binding EditCommand}"/>
                        <Button  x:Name="deletedg"
                         Content="Xóa"
                         Grid.Column="3"
                         Margin="5"
                         Style="{DynamicResource button:delete}"
                         Command="{Binding DeleteCommand}"/>
                    </Grid>
                </Grid>
            </Border>
            <DataGrid x:Name="sach"
              Margin="5"
              Grid.Row="1"
              FontSize="18"
              AutoGenerateColumns="False"
              HeadersVisibility="Column"
              IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã nhân viên" Binding="{Binding UserID}" />
                    <DataGridTextColumn Header="Tên nhân viên" Binding="{Binding UserName}" />
                    <DataGridTextColumn Header="Mật khẩu" Binding="{Binding Password}" />
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                    <DataGridTextColumn Header="CCCD" Binding="{Binding CCCD}" />
                    <DataGridTextColumn Header="SDT" Binding="{Binding SDT}" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Grid>
</Page>
