<Page x:Class="LibraryManagementApplication.bookpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagementApplication"
      mc:Ignorable="d" 
      d:DesignHeight="465" d:DesignWidth="730">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
          Background="#e6f3ff">
            <TextBlock Text="Quản lý thông tin sách " 
                   FontSize="50" 
                   FontWeight="Bold" 
                   FontFamily="roboto"
                   Foreground="#07209e"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   />
        </Grid>

        <TabControl Grid.Row="1"
                Height="auto"
                        VerticalAlignment ="Stretch">
            <TabItem Header="Sach" >
                <Grid 
                        Background="#cfcfcf">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <DockPanel Grid.Row="1"
                                   Margin="5">
                            <TextBlock Text="Ten sach: "
                                       Foreground="#07209e"
                                       FontSize="18"/>
                            <TextBox x:Name="tentb"/>
                        </DockPanel>
                        <DockPanel Grid.Row="2"
                                   Margin="5">
                            <TextBlock Text="ISBN: "
                                    Foreground="#07209e"
                                    FontSize="18"/>
                            <TextBox x:Name="isbn"/>
                        </DockPanel>
                        <DockPanel Grid.Row="3"
                                    Margin="5">
                            <TextBlock Text="Tac gia: "
                                Foreground="#07209e"
                                FontSize="18"/>
                            <ComboBox x:Name="tacgiatb"/>
                        </DockPanel>
                        <DockPanel Grid.Row="4"
                                Margin="5">
                            <TextBlock Text="The loai: "
                               Foreground="#07209e"
                               FontSize="18"/>
                            <ComboBox x:Name="theloaitb"/>
                        </DockPanel>
                        <DockPanel Grid.Row="5"
                                    Margin="5">
                            <TextBlock Text="NXB: "
                                       Foreground="#07209e"
                                       FontSize="18"/>
                            <ComboBox x:Name="nxbtb"/>
                        </DockPanel>
                        <DockPanel Grid.Row="6"
                                    Margin="5">
                            <TextBlock Text="Ngon ngu: "
                                        Foreground="#07209e"
                                        FontSize="18"/>
                            <TextBox x:Name="ngonngutb"/>
                        </DockPanel>
                        <DockPanel Grid.Row="7"
                                   Margin="5">
                            <TextBlock Text="Vi tri: "
                                        Foreground="#07209e"
                                        FontSize="18"/>
                            <TextBox x:Name="vitritb"/>
                        </DockPanel>
                        <DockPanel Grid.Row="8"
                                    Margin="5">
                            <TextBlock Text="Trang thai: "
                                       Foreground="#07209e"
                                       FontSize="18"/>
                            <ComboBox x:Name="trangthaitb"/>
                        </DockPanel>
                        <Grid Grid.Row="9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button  x:Name="addsach"
                                     Content="Them"
                                     Background="#FF1CD148"
                                     Margin="30,5,30,5"
                                     Style="{DynamicResource button1}"/>
                            <Button  x:Name="editsach"
                                     Content="Sua"
                                     Background="#FFD1CD1C"
                                     Margin="30,5,30,5"
                                     Grid.Column="1"
                                     Style="{DynamicResource button1}"/>
                            <Button  x:Name="deletesach"
                                     Content="Xoa"
                                     Grid.Column="2"
                                     Background="#FFD1291C"
                                     Margin="30,5,30,5"
                                     Style="{DynamicResource button1}"/>
                        </Grid>
                    </Grid>
                    <ListView x:Name="sach"
                          Margin="5"
                          Grid.Column="1">
                    </ListView>
                </Grid>
            </TabItem>

            <TabItem Header="Thong tin them">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Background="#cfcfcf"
                          Margin="5" 
                          Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="110"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Ten tac gia: "
                                       Foreground="#07209e"
                                       FontSize="18"
                                       Margin="5"
                                       Grid.ColumnSpan="3"/>
                            <TextBox Grid.Row="1"
                                     Margin="5"
                                     Grid.ColumnSpan="3"></TextBox>
                            <Button x:Name="addtg"
                                    Style="{DynamicResource RoundButton}"
                                    Content="+"
                                    Background="#FF1CD148"
                                    Height="30"
                                    Width="30"
                                    Grid.Column="0"
                                    Grid.Row="2"/>
                            <Button x:Name="deltg"
                                    Style="{DynamicResource RoundButton}"
                                    Content="-"
                                    Background="#FFD1291C"
                                    Height="30"
                                    Width="30"
                                    Grid.Column="1"
                                    Grid.Row="2"/>
                        </Grid>
                        <ListView x:Name="tacgia"
                            Margin="5"
                            Grid.Row="1">
                        </ListView>
                    </Grid>
                    <Grid Background="#cfcfcf"
                          Margin="5" 
                          Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="110"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Ten the loai: "
                                       Foreground="#07209e"
                                       FontSize="18"
                                       Margin="5"
                                       Grid.ColumnSpan="3"/>
                            <TextBox Grid.Row="1"
                                     Margin="5"
                                     Grid.ColumnSpan="3"></TextBox>
                            <Button x:Name="addtl"
                                    Style="{DynamicResource RoundButton}"
                                    Content="+"
                                    Background="#FF1CD148"
                                    Height="30"
                                    Width="30"
                                    Grid.Column="0"
                                    Grid.Row="2"/>
                            <Button x:Name="deltl"
                                    Style="{DynamicResource RoundButton}"
                                    Content="-"
                                    Background="#FFD1291C"
                                    Height="30"
                                    Width="30"
                                    Grid.Column="1"
                                    Grid.Row="2"/>
                        </Grid>
                        <ListView x:Name="theloai"
                            Margin="5"
                            Grid.Row="1">
                        </ListView>
                    </Grid>
                    <Grid Background="#cfcfcf"
                          Margin="5" 
                          Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="110"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Ten nha xuat ban: "
                                       Foreground="#07209e"
                                       FontSize="18"
                                       Margin="5"
                                       Grid.ColumnSpan="3"/>
                            <TextBox Grid.Row="1"
                                         Margin="5"
                                         Grid.ColumnSpan="3"></TextBox>
                            <Button x:Name="addnxb"
                                    Style="{DynamicResource RoundButton}"
                                    Content="+"
                                    Background="#FF1CD148"
                                    Height="30"
                                    Width="30"
                                    Grid.Column="0"
                                    Grid.Row="2"/>          
                            <Button x:Name="delnxb"
                                    Style="{DynamicResource RoundButton}"
                                    Content="-"
                                    Background="#FFD1291C"
                                    Height="30"
                                    Width="30"
                                    Grid.Column="1"
                                    Grid.Row="2"/>
                        </Grid>
                        <ListView x:Name="nxb"
                            Margin="5"
                            Grid.Row="1">
                        </ListView>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
